<% layout('layouts/default') -%>

<% block('title', 'New Note') %>

<section class="container full-height">
    <div class="form-group mb-3">
        <input type="text" name="title" class="form-control" placeholder="Title">
    </div>

    <div class="form-group mb-3">
        <input type="text" name="description" class="form-control" placeholder="Description">
    </div>

    <div class="form-group full-height">
        <label for="new-note-input">Create New Note</label>
        <textarea name="content" class="form-control markdown-input full-height" id="new-note-input" rows="3"></textarea>
    </div>
    
    <button id="save-note" type="submit" class="btn btn-outline-success">Save Note</button>
</section>
